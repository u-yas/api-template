extend type Mutation {
  createWorks(works: CreateWorksInput): Boolean!
  updateWorks(works: WorksInput): Boolean!
  deleteWorks(id: ID!): Boolean!
}

input CreateWorksInput {
  title: String!
  description: String!
  image: String!
  thumbnail: String!
  tags: [String]!
}

input updateWorksInput {
  id: ID!
  title: String
  description: String
  image: String
  thumbnail: String
  tags: [String]
}